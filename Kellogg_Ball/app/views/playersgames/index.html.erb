<div class="page-header">
  <h1>
    Playersgames
    <a href="/playersgames/new" class="btn btn-lg btn-success">New Playersgame</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Game</th>
        <th>Player</th>
        <th>Actions</th>
      </tr>

      <% @playersgames.each do |playersgame| %>
      <tr>
        <td><%= playersgame.game_id %></td>
        <td><%= playersgame.player_id %></td>
        <td>
          <a href="/playersgames/<%= playersgame.id %>" class="btn btn-primary">Show</a>
          <a href="/playersgames/<%= playersgame.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_playersgame/<%= playersgame.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
